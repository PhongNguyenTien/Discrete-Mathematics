
#include <iostream>

using namespace std;

int ones(string s){
    int len = s.size();
    if (s == "1") return 1;
    if (s == "0") return 0;
    return (s[0] = '0' ? ones(s.substr(1, len - 1)), 1 + ones(s.substr(1, len - 1)));
}
int main() {
    string s;
    cin >> s;
    cout << ones(s);
    return 0;
}
